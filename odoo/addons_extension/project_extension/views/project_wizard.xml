<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id='view_won_wizard' model='ir.ui.view'>
        <field name="name">won.wizard.form</field>
        <field name="model">won.wizard</field>
        <field name="arch" type="xml">
            <form string="Confirmation Note">
                <group>
                    <field name="project_type" force_save="1" widget="radio" options="{'horizontal': True}"/>
                    <field name="project_id" invisible="project_type != 'existing'" force_save="1"/>
                    <field name="name" force_save="1"/>
                    <field name="crm_id" force_save="1" invisible="1"/>
                </group>
                <footer>
                    <button name="action_confirm_won" type="object" string="Confirm" class="btn-primary"/>
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>