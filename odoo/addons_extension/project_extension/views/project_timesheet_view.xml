<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Timesheet app list view -->
    <record id="view_analytic_line_tree_timesheet_type_inherit" model="ir.ui.view">
        <field name="name">account.analytic.line.tree.timesheet.type.inherit</field>
        <field name="model">account.analytic.line</field>
        <field name="inherit_id" ref="hr_timesheet.hr_timesheet_line_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='unit_amount']" position="before">
                <field name="timesheet_type" string="Type" required="1"/>
            </xpath>
        </field>
    </record>

    <!-- Task form view (Timesheet tab) -->
    <record id="view_task_form2_add_timesheet_type" model="ir.ui.view">
        <field name="name">project.task.form.timesheet.type</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='unit_amount']" position="before">
                <field name="timesheet_type" string="Type" required="1"/>
            </xpath>
        </field>
    </record>

    <record id="view_task_form_inherit_custom" model="ir.ui.view">
    <field name="name">project.task.form.inherit.custom</field>
    <field name="model">project.task</field>
    <field name="inherit_id" ref="project.view_task_form2"/>
    <field name="arch" type="xml">
        <xpath expr="//field[@name='user_ids']" position="after">
            <field name="shadow_ids" widget="many2many_avatar_user"/>
        </xpath>
    </field>
</record>

 <record id="resource_calendar_form_inherit_global_leaves" model="ir.ui.view">
    <field name="name">resource.calendar.form.inherit.global.leaves</field>
    <field name="model">resource.calendar</field>
    <field name="inherit_id" ref="resource.resource_calendar_form"/>
    <field name="arch" type="xml">
        <xpath expr="//page[@name='working_hours']" position="after">
            <page string="Global Leaves" name="global_leaves">
                <field name="global_leave_ids">
                    <list editable="top">
                        <field name="name"/>
                        <field name="date_from"/>
                        <field name="date_to"/>
                    </list>
                </field>
            </page>
        </xpath>
    </field>
</record>


</odoo>